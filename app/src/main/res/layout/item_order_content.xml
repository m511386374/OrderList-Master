<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemOrder_contentRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:showDividers="end"
    android:divider="@drawable/shapec"
    >
    <!--android:showDividers="middle"
    android:divider="@drawable/shape" 设置分割线，只能在线性布局上用-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/gray_bg1"
        android:orientation="horizontal"
        android:gravity="center_vertical"

        >

    <ImageView
        android:id="@+id/iv_itemOrder_contentImg"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/nanfen" />

    <LinearLayout
        android:layout_marginLeft="7dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_itemOrder_contentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="新包包啊多好啊新" />

        <TextView
            android:id="@+id/tv_itemOrder_contentColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="蓝色" />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
